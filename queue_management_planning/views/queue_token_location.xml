<odoo>

    <record model="ir.ui.view" id="queue_token_location_form_view">
        <field
            name="name"
        >queue.token.location.form (in queue_management_planning)</field>
        <field name="model">queue.token.location</field>
        <field
            name="inherit_id"
            ref="queue_management.queue_token_location_form_view"
        />
        <field name="arch" type="xml">
            <field name="location_id" position="after">
                <field name="expected_date" />
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="queue_token_location_location_tree_view">
        <field
            name="name"
        >queue.token.location.search (in queue_management_planning)</field>
        <field name="model">queue.token.location</field>
        <field
            name="inherit_id"
            ref="queue_management.queue_token_location_location_tree_view"
        />
        <field name="arch" type="xml">
            <field name="location_id" position="after">
                <field name="arrival_date" />
                <field name="expected_date" />
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="queue_token_location_editable_tree_view">
        <field
            name="name"
        >queue.token.location.tree (in queue_management_planning)</field>
        <field name="model">queue.token.location</field>
        <field
            name="inherit_id"
            ref="queue_management.queue_token_location_editable_tree_view"
        />
        <field name="arch" type="xml">
            <field name="group_id" position="after">
                <field name="expected_date" />
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="queue_token_location_search_view">
        <field name="name">queue.token.location.search (in queue_management)</field>
        <field name="model">queue.token.location</field>
        <field name="arch" type="xml">
            <search>
                <field name="token_id" />
                <field name="group_id" />
                <field name="location_id" />
                <searchpanel view_types="queue_planning">
                    <field name="expected_date" />
                </searchpanel>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="queue_token_location_planning_tree_view">
        <field name="name">queue.token.location.search (in queue_management)</field>
        <field name="model">queue.token.location</field>
        <field name="priority">99</field>
        <field name="mode">primary</field>
        <field
            name="inherit_id"
            ref="queue_management.queue_token_location_location_tree_view"
        />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="js_class">queue_planning</attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.actions.act_window" id="queue_token_location_calendar_act_window">
        <field name="name">Token Locations</field>
        <field name="res_model">queue.token.location</field>
        <field name="view_mode">tree</field>
        <field
            name="domain"
        >["|", ("location_id", "=", active_id), ("group_id.location_ids", "in", active_id)]</field>
        <field name="context">{'location_id': active_id}</field>
        <field name="search_view_id" ref="queue_token_location_search_view" />
    </record>

    <record
        model="ir.actions.act_window.view"
        id="queue_token_location_planning_tree_act_window_view"
    >

        <field name="view_mode">tree</field>
        <field name="view_id" ref="queue_token_location_planning_tree_view" />
        <field name="act_window_id" ref="queue_token_location_calendar_act_window" />
    </record>



</odoo>
